{
  "manifest_version": 3,
  "name": "CodeSplash Homepage",
  "version": "1.0.0",
  "author": "Kurtis Pritchard",
  "description": "Replace your new tab page with a customizable homepage featuring bookmarks, folders, custom icons, and background images.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "activeTab"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodeSplash Homepage"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}