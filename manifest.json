{
  "manifest_version": 3,
  "name": "CodeSplash Homepage",
  "version": "1.0.0",
  "author": "Kurtis Pritchard",
  "description": "A chrome homepage wtih customizable bookmarks, icons, background images, and tabs.",
  "permissions": [
    "storage",
    "unlimitedStorage",
    "contextMenus",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "CodeSplash Homepage"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}